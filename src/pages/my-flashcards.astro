---
import { MyFlashcardsView } from "@/components/MyFlashcardsView";
import Layout from "@/layouts/Layout.astro";

// This page requires authentication, handled by middleware
const { user } = Astro.locals;
if (!user) {
  return Astro.redirect("/auth/login");
}
---

<Layout title="My Flashcards">
  <div class="container mx-auto py-8 px-4">
    <div class="max-w-7xl mx-auto">
      <!-- Header -->
      <div class="mb-8">
        <h1 class="text-4xl font-bold text-foreground mb-2">My Flashcards</h1>
        <p class="text-muted-foreground">
          Manage your flashcard collection. Create, edit, or delete flashcards as needed.
        </p>
      </div>

      <!-- Main Content -->
      <MyFlashcardsView client:load />
    </div>
  </div>
</Layout>

<style>
  /* Add any page-specific styles here */
</style>
